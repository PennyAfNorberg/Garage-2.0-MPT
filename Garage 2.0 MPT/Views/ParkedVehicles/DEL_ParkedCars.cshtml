@model Garage_2._0_MPT.Models.ListViewModel

@{
    ViewData["Title"] = "Index";
    
}

<h1>@Model.Message</h1>

<p>
    <a asp-action="Index">Return to all Vehicles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th id="s_typ" class="myTbBox" onclick='location.href="@Url.Action("ParkedCars", "ParkedVehicles", new {Sort = "Name" , Message="Name"})"'>
                @Html.DisplayNameFor(model => model.Header.VehicleTyp.Name)<span><img id="i1" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_reg" class="myTbBox" onclick='location.href="@Url.Action("ParkedCars", "ParkedVehicles", new {Sort = "RegNr", Message="Reg nr" })"'>
                @Html.DisplayNameFor(model => model.Header.RegNr)<span><img id="i2" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_col" class="myTbBox" onclick='location.href="@Url.Action("ParkedCars", "ParkedVehicles", new {Sort = "VehicleColor", Message="Color" })"'>
                @Html.DisplayNameFor(model => model.Header.VehicleColor)<span><img id="i3" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_mod" class="myTbBox" onclick='location.href="@Url.Action("ParkedCars", "ParkedVehicles", new {Sort = "VehicleModel", Message="Model" })"'>
                @Html.DisplayNameFor(model => model.Header.VehicleModel)<span><img id="i4" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_bra" class="myTbBox" onclick='location.href="@Url.Action("ParkedCars", "ParkedVehicles", new {Sort = "VehicleBrand", Message="Brand" })"'>
                @Html.DisplayNameFor(model => model.Header.VehicleBrand)<span><img id="i5" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th class="myTbBox">
                @Html.DisplayNameFor(model => model.Header.ParkedTime)
            </th>
            <th class="myTbBox">
                @Html.DisplayNameFor(model => model.Header.Price)
            </th>
            <th class="myTbBox">
                @Html.DisplayNameFor(model => model.Header.Where)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkedVehicles)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTyp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Where)
            </td>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
        <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a> -->
            </td>
        </tr>
}
    </tbody>
</table>
