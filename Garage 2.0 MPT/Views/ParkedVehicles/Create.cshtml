        <label asp-for="ParkInDate" class="control-label"></label>
        <input asp-for="ParkInDate" class="form-control" />
        <span asp-validation-for="ParkInDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParkOutDate" class="control-label"></label>
        <input asp-for="ParkOutDate" class="form-control" />
        <span asp-validation-for="ParkOutDate" class="text-danger"></span>
    </div>
              
       -->
            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
