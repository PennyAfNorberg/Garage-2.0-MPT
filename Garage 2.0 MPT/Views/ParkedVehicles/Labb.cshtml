@model IEnumerable<Garage_2._0_MPT.Models.ParkedVehicle>

@{
    ViewData["Title"] = "Overviev";
}

<h1>Parked Cars</h1>

<p>
    <a asp-action="Create">Park</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.VehicleTyp.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.VehicleColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Where)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleTyp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Where)
            </td>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> | -->
                <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>
            </td>
        </tr>
}
    </tbody>
</table>
