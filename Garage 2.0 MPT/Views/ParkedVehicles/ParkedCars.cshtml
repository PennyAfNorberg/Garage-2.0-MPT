@model Garage_2._0_MPT.Models.ListViewModel

@{
    ViewData["Title"] = "Index";
    
}

<h1>Search Result Vehicles</h1>

<p>
    <a asp-action="Index">Return to all Vehicles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleTyp.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.NumberOfWheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.ParkedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkedVehicles)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTyp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
    <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a> -->
            </td>
        </tr>
}
    </tbody>
</table>
