@model IEnumerable<Garage_2._0_MPT.Models.IndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Parked Cars</h1>

<p>
    <a asp-action="Create">Park</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleTyp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedTime)
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTyp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedHours)
            </td>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> | -->
                <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>
            </td>
        </tr>
}
    </tbody>
</table>
