@model IEnumerable<Garage_2._0_MPT.Models.ParkedVehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Parked Cars</h1>

<p>
    <a asp-action="Create">Park</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th id="s_typ" onclick='location.href="@Url.Action("SortTyp", "ParkedVehicles")"'>

                 @Html.DisplayNameFor(model => model.VehicleTyp.Name)<span><img id="i1"class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_reg" onclick='location.href="@Url.Action("SortReg", "ParkedVehicles")"'>
                @Html.DisplayNameFor(model => model.RegNr)<span><img id="i2"class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_col" onclick='location.href="@Url.Action("SortCol", "ParkedVehicles")"'>
                @Html.DisplayNameFor(model => model.VehicleColor)<span><img id="i3" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_mod" onclick='location.href="@Url.Action("SortMod", "ParkedVehicles")"'>
                @Html.DisplayNameFor(model => model.VehicleModel)<span><img id="i4" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th id="s_bra" onclick='location.href="@Url.Action("SortBrand", "ParkedVehicles")"'>
                @Html.DisplayNameFor(model => model.VehicleBrand)<span><img id="i5" class="updown" src="~/img/bullet_green.png" /></span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTyp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> | -->
                <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>
            </td>
        </tr>
}
    </tbody>
</table>
