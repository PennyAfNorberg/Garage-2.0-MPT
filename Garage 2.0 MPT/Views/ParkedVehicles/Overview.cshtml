@model Garage_2._0_MPT.Models.ListViewModel

@{
    ViewData["Title"] = "Overviev";
}

<h1 class="header_table">Parked Cars</h1>

<p>
    <a asp-action="Create">Park</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleTyp.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.VehicleColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.ParkedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.ParkInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.ParkOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header.Where)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkedVehicles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTyp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Where)
            </th>
            <td>
                <a asp-action="Check_Out" asp-route-id="@item.Id">Check Out</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
        <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
